<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Header (20% экрана) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp">

        <ImageButton
            android:id="@+id/img_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:src="@drawable/arrow1"
            android:background="@color/white"/>

        <TextView
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:text="@string/rasschet"
            android:textColor="@color/pink"
            android:textSize="36sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Content (80% экрана) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:background="@color/lightblue"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="40dp"
        android:layout_marginBottom="50dp">

        <!-- Spinner -->
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/picker1"
            android:layout_marginBottom="30dp"
            android:minHeight="48dp" />

        <!-- Input field -->
        <EditText
            android:id="@+id/metres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/vvod_metres"
            android:hint="@string/vvedite_kol_metres"
            android:padding="16dp"
            android:minHeight="48dp"
            android:layout_marginBottom="30dp" />

        <!-- Flexible spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Calculate button -->
        <Button
            android:id="@+id/res_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_reg"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:text="@string/rasschitat"
            android:textSize="24sp"
            android:textStyle="bold"
            android:minWidth="200dp"
            android:minHeight="60dp" />

        <!-- Result -->
        <TextView
            android:id="@+id/result_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/result_block"
            android:layout_gravity="center_horizontal"
            android:text="@string/result"
            android:padding="16dp"
            android:minHeight="60dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="40dp" />

    </LinearLayout>
</LinearLayout>